---
name: Docker Image CI
on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
#  schedule:
#    - cron: "0 1 * * *"
#  workflow_dispatch:
jobs:
  build:
    runs-on: ubuntu-latest

    steps:
    - uses: actions/checkout@v3
      
    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v2

    - name: Login to Docker Hub
      uses: docker/login-action@v2
      with:
        username: ${{ secrets.DOCKER_HUB_USERNAME }}
        password: ${{ secrets.DOCKER_HUB_TOKEN }}
        
    #- name: Build and push base image
    #  uses: docker/build-push-action@v3
    #  with:
    #    context: .
    #    file: ./base/Dockerfile
    #    platforms: linux/amd64
    #    tags: engineers4cloud/containeros:base-0.8.7
    #    push: true
        
    #- name: Build and push slim image
    #  uses: docker/build-push-action@v3
    #  with:
    #    context: .
    #    file: ./slim/Dockerfile
    #    platforms: linux/amd64
    #    tags: engineers4cloud/containeros:slim-0.8.7
    #    push: true
        
    - name: Build and push aws-cli image
      uses: docker/build-push-action@v3
      with:
        context: .
        file: ./awscli/Dockerfile
        platforms: linux/amd64
        tags: engineers4cloud/containeros:awscli-0.8.7
        push: true    
